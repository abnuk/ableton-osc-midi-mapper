{
  "appId": "com.abletonosc.midimapper",
  "productName": "Ableton OSC MIDI Mapper",
  "directories": {
    "output": "release",
    "buildResources": "resources"
  },
  "files": [
    "dist/**/*",
    "package.json",
    "node_modules/**/*"
  ],
  "asarUnpack": [
    "node_modules/**/*.node"
  ],
  "mac": {
    "target": ["dmg", "zip"],
    "category": "public.app-category.music",
    "type": "agent",
    "extendInfo": {
      "LSUIElement": 1
    }
  },
  "win": {
    "target": ["nsis", "portable"]
  },
  "nsis": {
    "oneClick": false,
    "allowToChangeInstallationDirectory": true
  }
}

